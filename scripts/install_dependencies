#!/bin/bash
yum install -y httpd

deploymentid=$(aws deploy get-deployment-group --application-name nht --deployment-group-name nht-ec2 --region ap-northeast-1 --query deploymentGroupInfo.deploymentGroupId --output text)

#== change the file name encountered the issue.
file=/var/www/html/index.html
file1=/var/www/html/LICENSE.txt

touch /opt/codedeploy-agent/deployment-root/deployment-instructions/$deploymentid-cleanup
echo $file >> /opt/codedeploy-agent/deployment-root/deployment-instructions/$deploymentid-cleanup
echo $file1 >> /opt/codedeploy-agent/deployment-root/deployment-instructions/$deploymentid-cleanup
